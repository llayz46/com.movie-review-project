<div class="col-md-4 my-2 d-flex">
  <div class="card w-100" style="width: 18rem;">
    {% if movie.imageName %}
      <img src="{{ vich_uploader_asset(movie, 'imageFile')  }}" class="card-img-top" alt="Affiche de {{ movie.name }}">
    {% else %}
      <img src="{{ asset('build/images/default-movie.png') }}" class="card-img-top" alt="Affiche de {{ movie.name }}">
    {% endif %}
    <div class="card-body">
      <h5 class="card-title">{{ movie.name }}</h5>
      <a href="{{ path('app_movie_show', {'id': movie.id}) }}" class="btn btn-primary mt-2">Voir le film</a>
    </div>
  </div>
</div>